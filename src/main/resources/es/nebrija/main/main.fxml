<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="es.nebrija.main.MainController">
    <children>
        <!-- Contenedor VBox para colocar las dos HBox una debajo de la otra -->
        <VBox alignment="CENTER" spacing="10">
            <HBox alignment="CENTER" prefHeight="38.0" prefWidth="600.0" spacing="100.0">
                <children>
                    <TextField fx:id="phoneModelField" promptText="Modelo del teléfono"/>
                    <TextField fx:id="priceField" promptText="Precio"/>
                </children>
            </HBox>

            <!-- HBox para el precio -->
            <HBox alignment="CENTER" prefHeight="35.0" prefWidth="600.0" spacing="100.0">
                <children>
                    <TextField fx:id="phoneBrand" promptText="Marca"/>
                    <DatePicker fx:id="launchDateField" promptText="Fecha de lanzamiento"/>
                </children>
            </HBox>

            <HBox alignment="CENTER" prefHeight="42.0" prefWidth="600.0" spacing="50.0">
                <children>
                    <Button fx:id="addButton" onAction="#añadirDispositivo" text="Añadir"/>
                    <Button fx:id="editButton" onAction="#editarDispositivo" text="Actualizar"/>
                    <Button fx:id="deleteButton" onAction="#eliminarDispositivo" text="Eliminar"/>
                </children>
            </HBox>
        </VBox>

        <!-- Contenedor HBox para la tabla -->
        <HBox prefHeight="269.0" prefWidth="600.0">
            <children>
                <TableView fx:id="tableView" prefHeight="313.0" prefWidth="600.0">
                    <columns>
                        <TableColumn fx:id="columnModel" prefWidth="306.4" text="Modelo"/>
                        <TableColumn fx:id="columnBrand" prefWidth="283.2" text="Marca"/>
                    </columns>
                </TableView>
            </children>
        </HBox>
    </children>
</VBox>
