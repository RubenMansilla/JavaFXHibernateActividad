            </VBox>
            <VBox alignment="CENTER" prefHeight="50.0" prefWidth="402.0">
               <children>
                  <TextField fx:id="contrasena" prefHeight="26.0" prefWidth="394.0" />
               </children>
               <padding>
                  <Insets bottom="1.0" top="1.0" />
