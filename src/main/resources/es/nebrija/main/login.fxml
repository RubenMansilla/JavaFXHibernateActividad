         <children>
            <Button mnemonicParsing="false" onAction="#iniciarSesion" text="Iniciar Sesión">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#registrarSesion" prefHeight="26.0" prefWidth="102.0" text="Registrarse">
               <font>
                  <Font size="16.0" />
